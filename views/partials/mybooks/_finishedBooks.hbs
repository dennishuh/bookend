<div class="col s12">
  <div class="card horizontal finished-book">
    <div class="card-image">
      <img src="{{cover}}" alt="{{title}}">
    </div>
    <div class="card-stacked">
      <div class="card-content">
        <h5 class="header">{{title}} <span class="new badge indigo darken-4" data-badge-caption="">finished</span></h5>

        <p class="start-end-dates ">
          Started: {{moment startedDate 'MM/DD/YYYY'}} <i class="fal fa-angle-double-right"></i> Finished: {{moment finishedDate 'MM/DD/YYYY'}}
        </p>

        <div class="chip">
          <i class="fal fa-clock"></i> It took you {{timeDifference startedDate finishedDate}} to finish
        </div>

        <form class="delete-book" method="post" action="/books/{{id}}?_method=DELETE">
          <input type="hidden" name="_method" value="DELETE" />
          <button class="btn pink lighten-1" type="submit"><i class="fal fa-times"></i></button>
        </form>

        {{#unless note}}
          <a href="#" class="add-note">Add Note <i class="fal fa-comment-alt-lines" data-fa-transform="grow-4 right-6"></i></a>

          <form method="POST" action="/books/{{id}}?_method=PUT" id="comment-form">
            <a href="#" class="close-note-form right"><i class="fal fa-times"></i></a>
            <input type="hidden" name="_method" value="PUT" />
            <textarea placeholder="Add a note for future reference" name="note" class="materialize-textarea"></textarea>
            <button type="submit" class="btn btn-outline-info btn-small">Add Note</button>
          </form>
        {{/unless}}

        {{#if note}}
          <p class="notes"><i class="fal fa-comment-alt-lines" data-fa-transform="grow-4 left-6"></i> {{note}}</p>
        {{/if}}
      </div>

    </div>

  </div>
</div>
